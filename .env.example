# Required
DATABASE_URL=sqlite:////mnt/options_ai/database/predictions.db
TICKER=SPX
DATA_ROOT=/mnt/options_ai

# OAuth (v2.0) - required for model calls
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_TOKEN_URL=
OAUTH_SCOPE=
# Optional
OAUTH_AUDIENCE=
OAUTH_REFRESH_MARGIN_SECONDS=60
OAUTH_CACHE_PATH=/mnt/options_ai/state/oauth_token.json

# Optional tuning
MIN_CONFIDENCE=0.65
OUTCOME_DELAY=15
HISTORY_RECORDS=10
SIMILAR_CONDITIONS_N=3
FILE_STABLE_SECONDS=2
WATCH_POLL_SECONDS=1
REPLAY_MODE=false

# Bootstrap (v1.5+)
BOOTSTRAP_ENABLE=true
# 0 = unlimited
BOOTSTRAP_MAX_MODEL_CALLS_PER_MIN=0
BOOTSTRAP_MAX_MODEL_CALLS_PER_HOUR=0

# Caching / reprocessing (v1.6)
# none|from_model|from_summary|from_signals|full
REPROCESS_MODE=none

# Model
CODEX_MODEL=gpt-5.2-codex
PROMPT_VERSION=v2.0.0

# Deprecated (v2.0): OPENAI_API_KEY is ignored if present
# OPENAI_API_KEY=
